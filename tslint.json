{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "indent": [true, "spaces", 4],
        "interface-name": false,
        "max-line-length": false,
        "quotemark": [true, "single"],
        "semicolon": [true, "never"]
    }
}
